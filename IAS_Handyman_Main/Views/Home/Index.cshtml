    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>IAS Handyman</h1>
    <p class="lead">Ofrecemos los mejores servicios de reparación para hogares.</p>
    <p class="lead">Permítanos tener el placer de atenderle.</p>
</div>

