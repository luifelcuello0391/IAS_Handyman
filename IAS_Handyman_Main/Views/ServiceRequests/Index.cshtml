@model IEnumerable<IAS_Handyman.Models.ServiceRequest>

@{
    ViewBag.Title = "Lista de servicios";
}

<h2>Servicios agendados</h2>

<p>
    @Html.ActionLink("Agendar servicio", "Create")
</p>
<table class="table">
    <tr style="background-color:lightgray">
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>

        <th>
            @Html.Raw("Tipo de servicio")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModificationDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Code)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.IsEmergencyString)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.ScheduleDate)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CreationDateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ModificationDateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegisterStatus)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Ver detalle", "Details", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
